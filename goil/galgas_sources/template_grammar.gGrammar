grammar template_grammar "LL1" :
  with "template_parser.ggs" ;
  with "template_expression_parser.ggs" ;

  import lexique template_scanner in "template_scanner.gLexique" ;
  import syntax template_parser in "template_parser.ggs" ;
  import syntax template_expression_parser in "template_expression_parser.ggs" ;

  root <goil_template_start_symbol>
    ??@string inPrefix
    ??@string inPath
    ??@string inTemplateDirectory
    ?@goilTemplateVariableMap inTemplateVariableMap
    ?!@string ioResultingString
  ;
end grammar ;

