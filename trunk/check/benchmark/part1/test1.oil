OIL_VERSION = "2.5" : "test" ;

IMPLEMENTATION trampoline {
};

CPU test {

    OS config {
        STATUS = STANDARD;
    } ;


    APPMODE std {
    };

	RESOURCE test {
		RESOURCEPROPERTY = STANDARD;
	};

   	EVENT EV1 {
		MASK = AUTO;
	};

	EVENT EV2 {
		MASK = AUTO;
	};

    TASK step1 {
        PRIORITY = 13;
        AUTOSTART = FALSE;
        ACTIVATION = 1;
        SCHEDULE = FULL;
        USRSTACKSIZE = 256;
		SYSSTACKSIZE = 64;
    };

	TASK step2 {
        PRIORITY = 3;
        AUTOSTART = FALSE;
        ACTIVATION = 2;
        SCHEDULE = FULL;
        USRSTACKSIZE = 256;
		SYSSTACKSIZE = 128;
    };

	TASK pool {
        PRIORITY = 10;
        AUTOSTART = FALSE;
        ACTIVATION = 2;
		RESOURCE = test;
		EVENT = EV1;
        SCHEDULE = FULL;
        USRSTACKSIZE = 256;
		SYSSTACKSIZE = 128;
    };

	TASK pool2 {
        PRIORITY = 14;
        AUTOSTART = FALSE;
        ACTIVATION = 2;
        SCHEDULE = FULL;
        USRSTACKSIZE = 256;
		SYSSTACKSIZE = 128;
    };


	TASK pool3 {
        PRIORITY = 15;
        AUTOSTART = FALSE;
        ACTIVATION = 2;
		EVENT = EV2;
        SCHEDULE = FULL;
        USRSTACKSIZE = 256;
		SYSSTACKSIZE = 128;
    };

    COUNTER compteur {
      TICKSPERBASE = 1;
      MAXALLOWEDVALUE = 65535;
      MINCYCLE = 1;
    };
	 
	
    ALARM ZeAlarm {
      COUNTER = compteur;
      ACTION = ACTIVATETASK {
        TASK = step1;
      };
      AUTOSTART = TRUE {
        ALARMTIME = 1000;
        CYCLETIME = 1000;
        APPMODE = std;
      };
    };

};
