OIL_VERSION = "2.5" : "tasks_s15";

#include <softwareIT.oil>
#include <arch.oil>

IMPLEMENTATION trampoline {
  TASK {
    UINT32 [1..10] PRIORITY = 1;
  };
};

CPU test {
  OS config {
    STATUS = EXTENDED;
    BUILD = TRUE {
      APP_SRC = "tasks_s15.c";
      APP_SRC = "isr1_instance.c";
      APP_SRC = "task1_instance.c";
      APP_SRC = "task2_instance1.c";
      APP_SRC = "task2_instance2.c";
      APP_SRC = "task3_instance1.c";
      APP_SRC = "task3_instance2.c";
      APP_SRC = "task4_instance1.c";
      APP_SRC = "task4_instance2.c";
      APP_SRC = "task5_instance.c";
      APP_SRC = "task6_instance.c";
      APP_SRC = "task7_instance.c";
      APP_SRC = "task8_instance.c";
      TRAMPOLINE_BASE_PATH = "../../..";
      APP_NAME = "tasks_s15_non_exe";
    };
    SHUTDOWNHOOK = TRUE;
  };

  APPMODE std {};
    
  TASK t1 {
    AUTOSTART = TRUE { APPMODE = std; };
    PRIORITY = 2;
    ACTIVATION = 1;
    SCHEDULE = NON;
  };

  TASK t2 {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 2;
    SCHEDULE = NON;
  };

  TASK t3 {
    AUTOSTART = FALSE;
    PRIORITY = 2;
    ACTIVATION = 2;
    SCHEDULE = NON;
  };

  TASK t4 {
    AUTOSTART = FALSE;
    PRIORITY = 3;
    ACTIVATION = 2;
    SCHEDULE = NON;
  };

  TASK t5 {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = NON;
    EVENT = Event1;
  };

  TASK t6 {
    AUTOSTART = FALSE;
    PRIORITY = 2;
    ACTIVATION = 1;
    SCHEDULE = NON;
    EVENT = Event1;
  };
    
  TASK t7 {
    AUTOSTART = FALSE;
    PRIORITY = 3;
    ACTIVATION = 1;
    SCHEDULE = NON;
    EVENT = Event1;
  };
 
  TASK t8 {
    AUTOSTART = TRUE { APPMODE = std; };
    PRIORITY = 3;
    ACTIVATION = 1;
    SCHEDULE = NON;
    EVENT = Event1;
  };
 
  ISR softwareInterruptHandler0 {
    CATEGORY = 2;
    PRIORITY = 1;
  };
 
  EVENT Event1 {
    MASK = AUTO;
  };
};

