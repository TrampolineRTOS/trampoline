OIL_VERSION = "2.5" : "events_s2";

#include <arch.oil>

IMPLEMENTATION trampoline {
  TASK {
    UINT32 [1..10] PRIORITY = 1;
  };
};

CPU test {
  OS config {
    STATUS = STANDARD;
    BUILD = TRUE {
      APP_SRC = "events_s2.c";
      APP_SRC = "task1_instance.c";
      APP_SRC = "task2_instance.c";
      TRAMPOLINE_BASE_PATH = "../../..";
      APP_NAME = "events_s2_full_exe";
    };
    SHUTDOWNHOOK = TRUE;
  };

  APPMODE std {};

  TASK t1 {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    EVENT = Event1;
  };

  TASK t2 {
    AUTOSTART =  TRUE { APPMODE = std; };
    PRIORITY = 2;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    EVENT = Event2;
  };
 
  EVENT Event1 {
    MASK = AUTO;
  };

  EVENT Event2 {
    MASK = AUTO;
  };
};

