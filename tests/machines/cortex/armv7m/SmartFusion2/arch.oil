#include "../../../common/arch.oil"

IMPLEMENTATION archArmv7mSmartFusion2
{
  TASK
  {
    UINT32 STACKSIZE = 300;
  };

  ISR
  {
    UINT32 STACKSIZE = 200;
  };
};

CPU archArmv7mSmartFusion2Cpu
{
  OS defaultOS {
    MEMMAP = TRUE
    {
      COMPILER = gcc;
      LINKER = gnu_ld { SCRIPT = "script.ld"; };
      ASSEMBLER = gnu_as;
      MEMORY_PROTECTION = FALSE;
    };

    /* Build paths are from the test directory */
    BUILD = TRUE
    {
      CFLAGS  = "-O0"; 
      CFLAGS  = "-DLEVEL_KERNEL_MONITORING=4";
      CFLAGS  = "-fdump-tree-cfg";
      LDFLAGS = "-Map=blink.map -LC:/Microsemi/SoftConsole_v4.0/arm-none-eabi-gcc/arm-none-eabi/lib/armv7-m -LC:/Microsemi/SoftConsole_v4.0/arm-none-eabi-gcc/lib/gcc/arm-none-eabi/4.9.3/armv7-m";
      COMPILER = "arm-none-eabi-gcc";
      ASSEMBLER = "arm-none-eabi-as";
      LINKER = "arm-none-eabi-ld";
      COPIER = "arm-none-eabi-objcopy";
      SYSTEM = PYTHON;
      LIBRARY = archConfig;
    };
    USEVLE = TRUE;
    SYSTEM_CALL = TRUE;
    DEBUG = TRUE;
    WITHORTI = TRUE {FILE = "trampoline.orti";};
  };

  /* Lib paths are from the "TRAMPOLINE/machines" directory */
  LIBRARY archConfig
  {
    PATH = "../tests/machines/cortex/armv7m/SmartFusion2";
    CHEADER = "archTestConfig.h";
    CFILE = "archTestConfig.c";
  };
};
